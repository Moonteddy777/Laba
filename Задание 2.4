def Sarifzade(var):
    if isinstance(var, int):
        byte_repr = var.to_bytes((var.bit_length() + 7) // 8, byteorder='little', signed=True)
    elif isinstance(var, float):
        import struct
        byte_repr = struct.pack('d', var)  
    elif isinstance(var, str):
        byte_repr = var.encode('utf-8')
    else:
        byte_repr = bytes(var)
    hex_repr = ' '.join(f'{byte:02x}' for byte in byte_repr)
    print(f"{type(var).__name__}: {hex_repr}")
